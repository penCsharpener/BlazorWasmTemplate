@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="header">Profile</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col m12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="helper-text"></div>
            <div class="input-field col s12">
                <i class="material-icons prefix">person</i>
                <input asp-for="Username" class="validate" disabled />
                <label asp-for="Username"></label>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">local_phone</i>
                <input asp-for="Input.PhoneNumber" class="validate" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="helper-text"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn waves-effect waves-light">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
