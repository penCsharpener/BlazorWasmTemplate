@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="header">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col m12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="helper-text"></div>
            <div class="input-field col s12">
                <input asp-for="Input.OldPassword" class="validate" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword"></label>
                <span asp-validation-for="Input.OldPassword" class="helper-text"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Input.NewPassword" class="validate" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword"></label>
                <span asp-validation-for="Input.NewPassword" class="helper-text"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Input.ConfirmPassword" class="validate" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="helper-text"></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
