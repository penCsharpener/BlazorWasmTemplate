@page
@model ForgotPasswordModel

<h1 class="header">Forgot your password?</h1>
<h4 class="header">Enter your email.</h4>

<div class="row">
    <div class="col s12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="helper-text"></div>
            <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                <input asp-for="Input.Email" class="validate" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="helper-text"></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
